# Question link: https://leetcode.com/problems/power-of-two/description/?envType=daily-question&envId=2024-02-19

class Solution:
    def isPowerOfTwo(self, n: int) -> bool:
        if n <= 0:
            return False

        x = (int)(log(n) / log(2)) # or x = (int)(math.log2(n))
        print(x)
        print("2 ^ x = ", 2 ** x)
        if 2 ** x == n:
            return True
        return False
