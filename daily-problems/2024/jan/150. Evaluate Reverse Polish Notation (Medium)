# Question link: https://leetcode.com/problems/evaluate-reverse-polish-notation/?envType=daily-question&envId=2024-01-30


class Solution:
    def evalRPN(self, tokens: List[str]) -> int:
        stack = []

        for token in tokens:
            if (token == '+' or token == '-'
                or token == '*' or token == '/'):

                s1 = stack.pop()
                s2 = stack.pop()

                if token == '+':
                    ans = s2 + s1
                    print(s2, " + ", s1, " = ", ans)
                elif token == '-':
                    ans = s2 - s1
                    print(s2, " - ", s1, " = ", ans)

                elif token == '*':
                    ans = s2 * s1
                    print(s2, " * ", s1, " = ", ans)

                elif token == '/':
                    ans = int(s2 / s1) # this truncantes to 0
                    print(s2, " / ", s1, " = ", ans)
                    
                
                stack.append(ans)

            else:
                x = (int)(token)
                stack.append(x)

        return stack.pop() # the answer should be the only element left in the stack  
